<resources>
    <style name="deviceOverviewSeekBar" parent="seekBar">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_weight">3</item>
        <item name="android:minWidth">220dp</item>
    </style>

    <style name="deviceDetailTable">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stretchColumns">3</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="deviceDetailDescription" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>