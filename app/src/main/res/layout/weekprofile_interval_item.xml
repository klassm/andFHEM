        <TextView android:text="@string/from"
            android:id="@+id/intervalType"
            android:padding="5dp"/>
        <TextView android:text="HH:MM"
            android:id="@+id/time"
            android:padding="5dp"/>
        <TextView android:text="Â°C"
            android:id="@+id/temperature"
            android:padding="5dp"
