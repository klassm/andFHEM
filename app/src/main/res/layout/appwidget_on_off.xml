<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/appwidget_medium">

    <LinearLayout style="@style/appwidget_content">

        <TextView style="@style/appwidget_caption"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widgetOnButton"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/on"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:background="@android:color/white"
                android:contentDescription="@string/switchDevice"
                />

            <TextView
                android:id="@+id/widgetOffButton"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/off"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:contentDescription="@string/switchDevice"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        style="@style/appwidget_logo"
        android:contentDescription="@string/app_name"/>
</RelativeLayout>