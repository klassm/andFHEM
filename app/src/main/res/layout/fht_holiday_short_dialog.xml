<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:stretchColumns="0"
             android:padding="10dp">

    <TableRow android:id="@+id/targetTime">
        <TextView android:text="@string/endTime"
        style="@style/deviceDetailDescription"
        android:textStyle="bold"
        android:layout_column="0"/>

        <TextView android:id="@+id/endTimeValue"
        style="@style/deviceDetailContent"
        android:layout_column="1"
        android:text="" />
    </TableRow>

    <TableRow>
        <TimePicker android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:id="@+id/timePicker"/>
    </TableRow>

    <TableRow android:id="@+id/updateTemperatureRow">
        <TextView android:text="@string/desiredTemperature"
                  android:textStyle="bold"/>

        <TextView android:id="@+id/value"
                  style="@style/deviceDetailContent"
                  android:layout_width="wrap_content"
                  android:text="@string/dummy_text" />
    </TableRow>
</TableLayout>